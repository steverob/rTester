<center>

<table class="table table-condensed table-striped table-nonfluid">
  <thead>
    <tr>
      <th>Prayudh ID</th>
      <th>Candidate Name</th>
      <th>College</th>
      <th><%= "Rank" %></th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <% teammates=result.candidate.teammates %>
      <% span=teammates.count %>
          <tr>
            <td>
              <% teammates.each do |teammate| %>
                <%= "#{teammate.roll_no} <br />".html_safe %>
              <% end %>
            </td>
            <td>
              <% teammates.each do |teammate| %>
                <%= "#{teammate.name} <br />".html_safe %>
              <% end %>
            </td>
            <td>
              <% teammates.each do |teammate| %>
                <%= "#{teammate.college} <br />".html_safe %>
              <% end %>
            </td>
            <td rowspan="#{span}"><%= result.rank %></td>
          </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @results,:renderer => BootstrapPagination::Rails %>
</center>
