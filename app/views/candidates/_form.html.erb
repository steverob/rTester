<%= form_for @candidate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field',:pattern=>"[A-Za-z\. ]{3}[A-Za-z\. ]*", :title=>"Must be more than 3 characters!",:required=>"required",:autofocus=>"autofocus" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :college, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :college, :class => 'text_field',:pattern=>"[A-Za-z\. ]{3}[A-Za-z\. ]*", :title=>"Must be more than 3 characters!",:required=>"required"  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Prayudh ID", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :roll_no, :class => 'text_field',:pattern=>"PRH[0-9][0-9][0-9][0-9]", :title=>"Invalid Prayudh ID",:required=>"required"  %>
	<p class="help-block">Eg. PRH0001</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :department, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :department, :class => 'text_field',:required=>"required" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :year, :class => 'number_field',:required=>"required",:pattern=>"[0-9]",:title=>"Are you kiddin!?" %>
      <p class="help-block">Eg. 2</p>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>
